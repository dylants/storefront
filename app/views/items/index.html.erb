<% provide(:title, t('.title')) %>

<div class="row trade_items well">

  <div class="col-md-12">
    <%= image_tag("trade.png", :alt => t('.title'), class: "img-responsive") %>
    <p><%= t '.description' %></p>
    <hr>

    <div class="row">
      <div class="trade_sidebar col-md-3 hidden-xs">
        <h3>Sidebar</h3>
        <h4><a href="#tacos"><%= t '.tacos_for_sale' %></a></h4>
        <h4><a href="#hotsauce"><%= t '.hot_sauce_for_sale' %></a></h4>
        <h4><a href="#chips"><%= t '.chips_for_sale' %></a></h4>
      </div>

      <div class="col-md-9">
        <% if @tacos.empty? && @hot_sauces.empty? && @chips.empty? %>
          <h1 class="trade_heading"><%= t '.no_items_found' %></h1>
        <% else %>
          <% if @tacos.any? %>
            <h1 class="trade_heading"><a name="tacos"><%= t '.tacos_for_sale' %></a></h1>
            <hr>
            <%= render @tacos %>
          <% end %>

          <% if @hot_sauces.any? %>
            <h1 class="trade_heading"><a name="hotsauce"><%= t '.hot_sauce_for_sale' %></a></h1>
            <hr>
            <%= render @hot_sauces %>
          <% end %>

          <% if @chips.any? %>
            <h1 class="trade_heading"><a name="chips"><%= t '.chips_for_sale' %></a></h1>
            <hr>
            <%= render @chips %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>