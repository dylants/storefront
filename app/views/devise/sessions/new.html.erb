<h2><%= t '.title' %></h2>

<%= simple_form_for(resource,
                    :html => { :class => 'form-vertical' },
                    :as => resource_name,
                    :url => session_path(resource_name)) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, :label => false, :inline_label => t('.remember_me_label'), :as => :boolean %>
  <%= f.submit t('.submit'), :class => 'btn btn-inverse' %>
<% end %>

<%= render "devise/shared/links" %>
