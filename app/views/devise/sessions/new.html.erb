<h2>Sign In</h2>

<%= simple_form_for(resource,
                    :html => { :class => 'form-vertical' },
                    :as => resource_name,
                    :url => session_path(resource_name)) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, :label => false, :inline_label => 'Remember me', :as => :boolean %>
  <%= f.submit 'Sign In', :class => 'btn btn-inverse' %>
<% end %>

<%= render "devise/shared/links" %>
