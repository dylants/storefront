<%= image_tag("tacotrade_small.png", :alt => t('site_name')) %>
<h1 class="heading"><%= t 'devise.sessions.new.title' %></h1>

<div class="sign_in">
  <%= simple_form_for(resource,
                      :html => {:class => 'form-vertical'},
                      :as => resource_name,
                      :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :remember_me,
                :label => false,
                :inline_label => t('devise.sessions.new.remember_me_label'),
                :as => :boolean %>
    <%= f.submit t('devise.sessions.new.submit'), :class => 'btn btn-inverse' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>