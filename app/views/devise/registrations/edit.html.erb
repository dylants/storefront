<% provide(:title, t('devise.registrations.edit.title')) %>
<div class="registration">
  <div class="row">
    <div class="span4 reset-center">
      <div class="well">
        <%= image_tag("tacotrade_small.png", :alt => t('site_name')) %>

        <h1 class="heading"><%= t 'devise.registrations.edit.heading' %></h1>

        <div class="register">
          <%= simple_form_for(resource,
                              :html => { :class => %w{form-vertical} },
                              :as => resource_name,
                              :url => registration_path(resource_name),
                              :html => { :method => :put }) do |f| %>
            <%= devise_error_messages! %>

            <%= f.input :name,
                        :required => false,
                        :label => t('devise.registrations.edit.name_label') %>
            <%= f.input :email %>
            <%= f.input :password, :label => t('devise.registrations.edit.password_label') %>
            <%= f.input :password_confirmation %>
            <%= f.input :current_password,
                        :required => true,
                        :label => t('devise.registrations.edit.current_password_label') %>

            <%= f.submit t('devise.registrations.edit.submit'), :class => "btn btn-inverse" %>
            <%= link_to t('devise.registrations.edit.cancel'),
                        root_path,
                        :class => "btn btn-inverse" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
